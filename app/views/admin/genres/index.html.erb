<div class="container">
  <div class="row">
    <h2 class="mb-3">ジャンル一覧・追加</h2>
<!----------- ジャンル追加------------->
    <div class="form-inline pl-5">
      <%= form_with model: [:admin, @genre], local: true do |f| %>
        <%= render 'shared/form_error', model: @genre %>
        <div class="form-group col-md-12">
          <p class="ml-8">ジャンル名</p>
          <%= f.text_field :name, placeholder: "ジャンル", size: "30", class: "form-control ml-5 mt-5 mb-5", id: "genre-form" %>
          <%= f.submit '新規登録', class:"btn btn-primary ml-5" %>
        </div>
      <% end %>
    </div>
<!----------- ジャンル一覧------------->
    <div class="col-md-5 pl-5">
      <table class="table table-striped table table-bordered">
        <thead class="thead-light">
          <tr>
            <th colspan="2", class="text-center">ジャンル</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to '編集', edit_admin_genre_path(genre.id), class: 'btn btn-sm btn-success' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>