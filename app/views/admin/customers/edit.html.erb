<div class="container">
  <h2 class="mb-4">
    <%= @customer.last_name + @customer.first_name %>さんの会員情報編集
  </h2>

  <%= form_with model: @customer, url: admin_customer_path, local:true do |f| %>
    <div class="form-group row">
      <%= f.label :id, "会員ID", class: "form-label col-sm-2" %>
      <div class="col-sm-8">
        <%= f.label :id, @customer.id %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :first_name, "氏名", class: "form-label col-sm-2" %>
      <div class="col-sm-3">
        <%= f.text_field :last_name, class: "form-control" %>
      </div>
      <div class="col-sm-3">
        <%= f.text_field :first_name, class: "form-control" %>
      </div>
    </div>
    
    <div class="form-group row">
      <%= f.label :first_name, "フリガナ", class: "form-label col-sm-2" %>
      <div class="col-sm-3">
        <%= f.text_field :last_name_kana, class: "form-control" %>
      </div>
      <div class="col-sm-3">
        <%= f.text_field :first_name_kana, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :postal_code, "郵便番号", class: "form-label col-sm-2" %>
      <div class="col-sm-3">
        <%= f.text_field :postal_code, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :address, "住所", class: "form-label col-sm-2" %>
      <div class="col-sm-6">
        <%= f.text_field :address, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :tel, "電話番号", class: "form-label col-sm-2" %>
      <div class="col-sm-3">
        <%= f.text_field :tel, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :email, "メールアドレス", class: "form-label col-sm-2" %>
      <div class="col-sm-3">
        <%= f.email_field :email, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :is_deleted, "会員ステータス", class: "form-label col-sm-2" %>
      <div class="col-sm-6">
        <div class="form-check form-check-inline">
          <%= f.radio_button :is_deleted, false, class: "form-check-input" %>
          <%= f.label :is_deleted, "有効", value: false, class: "form-check-label" %>
        </div>
        <div class="form-check form-check-inline">
          <%= f.radio_button :is_deleted, true, class: "form-check-input" %>
          <%= f.label :is_deleted, "退会", value: true, class: "form-check-label" %>
        </div>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-2"></div>
      <div class="col-sm-6">
        <%= f.submit "変更を保存", class: "btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>