<div class="container">
  <h4 class="mt-5">注文履歴一覧</h4>
    <div class="row">
        <table class="table table-bordered">
            <thead>
                <tr class="table-active">
                    <th scope="col">注文日</th>
                    <th scope="col">配送先</th>
                    <th scope="col">注文商品</th>
                    <th scope="col">支払金額</th>
                    <th scope="col">ステータス</th>
                    <th scope="col">注文詳細 </th>
                </tr>
            </thead>
            <% @orders.each do |orders| %>
            <% orders.order_details.each do |order_details| %>
            <tbody>
                <tr>
                    <td><%= orders.created_at.strftime('%y/%m/%d') %></td>
                    <td>
                        <%= orders.postal_code %><br>
                        <%= orders.address %><br>
                        <%= orders.address_name %>
                    </td>
                    <td><%= order_details.product.name %></td>
                    <td><%= (order_details.tax_included_price + orders.shipping_fee).to_s(:delimited) %>円</td>
                    <td><%= orders.order_status %></td>
                    <td><%= link_to "表示する", order_path(orders.id), class: "btn btn-primary" %></td>
                </tr>
            </tbody>
            <% end %>
            <% end %>
        </table>
    </div>
</div>