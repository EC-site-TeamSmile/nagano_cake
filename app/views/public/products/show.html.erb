<div class="container mt-4">
  <div class="row">
    <div class="col-4 mx-auto">
      <%= attachment_image_tag @product, :image, :fill, 300, 450 %>
    </div>
    <div class="col-5 mx-auto">
      <div class="product-information">
        <h1><%= @product.name %></h1>
        <h3><%= @product.introduction %></h3>
        <h1>¥ <%= @product.tax_price %>  <span class="h6">(税込)</span></h1>
      </div>
      <div class="cart_product_add">
        <%= form_with model: @cart_product, local:true do |f| %>
          <%= f.select :quantity, [1, 2, 3, 4, 5, 6, 7, 8, 9], include_blank: "個数選択" %>
          <%= f.hidden_field :product_id, values:  @product.id %>
          <%= f.submit "カートに入れる", class: "btn btn-success" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
