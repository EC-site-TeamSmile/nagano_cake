<div class="container">

        <div class="mt-5">
            <h4>配送先編集</h4>
        </div>
        
    <%= form_with model: @address, url: address_path, local:true do |f| %>
        
        <div class="form-group row">
          <%= f.label :postal_code, "郵便番号(ハイフンなし)", class: "form-label col-sm-3" %>
            <div class="col-sm-2">
             <%= f.text_field :postal_code, class: "form-control" %>
            </div>
        </div>
        
        <div class="form-group row">
          <%= f.label :address, "住所", class: "form-label col-sm-3" %>
            <div class="col-sm-6">
             <%= f.text_field :address, class: "form-control" %>
            </div>
        </div>
        
        <div class="form-group row">
          <%= f.label :address_name, "宛名", class: "form-label col-sm-3" %>
           <div class="col-sm-2">
             <%= f.text_field :address_name, class: "form-control" %>
        </div>
      
        <div class="form-group row">  
          <div class="col-sm-4"></div>
          <div class="col-sm-6">
            <%= f.submit "変更内容を保存", class: "btn btn-success" %>
          </div>
        </div>
    
    <% end %>  