      <%= form_with model: address, local:true do |f| %> 
      <%= render "shared/form_error", model: address %>
        
        <div class="form-group row">
          <%= f.label :postal_code, "郵便番号(ハイフンなし)", class: "form-label col-sm-3" %>
            <div class="col-sm-2">
             <%= f.text_field :postal_code, class: "form-control" %>
            </div>
        </div>
        
        <div class="form-group row">
          <%= f.label :address, "住所", class: "form-label col-sm-3" %>
            <div class="col-sm-6">
             <%= f.text_field :address, class: "form-control" %>
            </div>
        </div>
        
        <div class="form-group row">
          <%= f.label :address_name, "宛名", class: "form-label col-sm-3" %>
           <div class="col-sm-2">
             <%= f.text_field :address_name, class: "form-control" %>
           </div>
        </div>
        
        <div class="form-group row">  
          <div class="col-sm-4"></div>
            <div class="col-sm-6">
              <% if @address.id.nil? %>
                <%= f.submit "新規登録", class: "btn btn-success" %>
              <% else %>
                <%= f.submit "変更を保存する", class: "btn btn-success" %>
              <% end %>
            </div>
         </div>
        <% end %>
    