<div class="container">
  <%= render "shared/flash_message" %>
    <div class="row mt-4">
        <h4>マイページ</h4>
    </div>
    
    <div class="row mt-4">
      <table>
        <tr>
          <td><h5>登録情報</h5></td>
          <td><%= link_to "編集する", edit_customers_path, class:"btn btn-success" %></td>
        </tr>
      </table>
    <table class="table table-bordered mt-4">
        <tr>
          <th scope="row" class="table-active">氏名</th>
          <td><%= @customer.last_name + @customer.first_name %></td>
        </tr>    
        <tr>     
          <th scope="row" class="table-active">カナ</th>
          <td><%= @customer.last_name_kana + @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th scope="row" class="table-active">氏名</th>
          <td><%= @customer.last_name + @customer.first_name %></td>
        </tr>
        <tr>
          <th scope="row" class="table-active">郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th scope="row" class="table-active">住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th scope="row" class="table-active">電話番号</th>
          <td><%= @customer.tel %></td>
        </tr>
        <tr>
          <th scope="row" class="table-active">メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
    </table>
        
    <table class="mt-4">
        <tr>
          <td><h5>配送先</h5></td>
          <td><%= link_to "一覧を見る", addresses_path, class:"btn btn-primary" %></td>
        </tr>
        <tr class>
          <td><h5>注文履歴</h5></td>
          <td><%= link_to "一覧を見る", orders_path, class:"btn btn-primary" %></td>
        </tr>

    </div>
</div>
