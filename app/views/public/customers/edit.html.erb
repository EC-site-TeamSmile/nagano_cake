<div class="container">
  <h2 class="mb-4">会員情報編集</h2>

  <%= form_with model: @customer, url: customer_path, local:true do |f| %>
    
    <div class="form-group row">
      <%= f.label :first_name, "氏名", class: "form-label col-sm-2" %>
      <div class="col-sm-3">
        <%= f.text_field :last_name, class: "form-control" %>
      </div>
      <div class="col-sm-3">
        <%= f.text_field :first_name, class: "form-control" %>
      </div>
    </div>
    
    <div class="form-group row">
      <%= f.label :first_name, "フリガナ", class: "form-label col-sm-2" %>
      <div class="col-sm-3">
        <%= f.text_field :last_name_kana, class: "form-control" %>
      </div>
      <div class="col-sm-3">
        <%= f.text_field :first_name_kana, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :postal_code, "郵便番号", class: "form-label col-sm-2" %>
      <div class="col-sm-3">
        <%= f.text_field :postal_code, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :address, "住所", class: "form-label col-sm-2" %>
      <div class="col-sm-6">
        <%= f.text_field :address, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :tel, "電話番号", class: "form-label col-sm-2" %>
      <div class="col-sm-3">
        <%= f.text_field :tel, class: "form-control" %>
      </div>
    </div>

