<div class="container">
　<h2>新規会員登録</h2>
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
    <%= form_with model: @customer, url: customer_registration_path, id:'new_customer', class:'new_customer', local: true do |f| %>
    <div class="form-group">
      <%= f.label :"名前", class: "col-md-4 col-form-label" %>
      <%= f.label :"(姓)　" %>
    　<%= f.text_field :last_name, autofocus: true,  placeholder: "令和", class:"col-md-2" %>
      <%= f.label :"(名)　", class: "ml-2" %>
      <%= f.text_field :first_name, autofocus: true,  placeholder: "道子", class:"col-md-2" %>
    </div>
    <div class="form-group">
      <%= f.label :"フリガナ", class: "col-md-4 col-form-label" %>
      <%= f.label :"(セイ)" %>
    　<%= f.text_field :last_name_kana, autofocus: true,  placeholder: "レイワ", class:"col-md-2" %>
      <%= f.label :"(メイ)", class: "ml-2" %>
      <%= f.text_field :first_name_kana, autofocus: true,  placeholder: "ミチコ", class:"col-md-2" %>
    </div>
    <div class="form-group">
      <%= f.label :"メールアドレス", class: "col-md-4 col-form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class:"col-md-6" %>
    </div>
    <div class="form-group">
      <%= f.label :"郵便番号（ハイフンなし）", class: "col-md-4 col-form-label" %>
      <%= f.text_field :postal_code, autofocus: true, placeholder: "00000000", class:"col-md-3" %>
    </div>
    <div class="form-group">
      <%= f.label :"住所", class: "col-md-4 col-form-label" %>
      <%= f.text_field :address, autofocus: true, placeholder: "東京都渋谷区代々木神園町0-0", class:"col-md-6" %>
    </div>
    <div class="form-group">
      <%= f.label :"電話番号（ハイフンなし）", class: "col-md-4 col-form-label" %>
      <%= f.text_field :tel, autofocus: true, placeholder: "00000000000", class:"col-md-3" %>
    </div>
    <div class="form-group">
      <%= f.label :"パスワード（６文字以上）", class: "col-md-4 col-form-label" %>
      <%= f.password_field :password, autocomplete: "new-password", class:"col-md-3" %>
    </div>
    <div class="form-group">
      <%= f.label :"パスワード（確認用）", class: "col-md-4 col-form-label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"col-md-3" %>
    </div>
    <div class="form-group">
      <div class="text-center"><%= f.submit "新規登録", class:"btn btn-success w-25" %></div>
    </div>
  <% end %>
  　</div>
  </div>
   <div class="public-sign-in">
    <h3>既に登録済みの方</h3>
    <div class="col-md-9 mx-auto">
      <p><%= link_to "こちら", new_customer_session_path %>  からログインしてください。</p>
    </div>


   </div>

 </div>
