<div class="conteiner">


<h3>新規会員登録</h3>

<%= form_with model: @customer, url: customer_registration_path, id:'new_customer', class:'new_customer', local: true do |f| %>
  
  <div class="form-row">
    <%= f.label :"名前", class: "col-sm-2 col-form-label" %>
    <%= f.label :"(姓)" %>
  　<%= f.text_field :last_name, autofocus: true,  placeholder: "令和", class:"col-sm-2" %>
    <%= f.label :"(名)" %>
    <%= f.text_field :first_name, autofocus: true,  placeholder: "道子", class:"col-sm-2" %>
  </div>
  
  <div class="form-row">
    <%= f.label :"フリガナ", class: "col-sm-2 col-form-label" %>
    <%= f.label :"(セイ)" %>
  　<%= f.text_field :last_name_kana, autofocus: true,  placeholder: "レイワ", class:"col-sm-2" %>
    <%= f.label :"(メイ)" %>
    <%= f.text_field :first_name_kana, autofocus: true,  placeholder: "ミチコ", class:"col-sm-2" %>
  </div>
    
  <div class="form-row">
    <%= f.label :"メールアドレス", class: "col-sm-2 col-form-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class:"col-sm-2" %>
  </div>
  
  <div class="form-row">
    <%= f.label :"郵便番号（ハイフンなし）", class: "col-sm-2 col-form-label" %>
    <%= f.text_field :postal_code, autofocus: true, placeholder: "00000000", class:"col-sm-2" %>
  </div>
  
  <div class="form-row">
    <%= f.label :"住所", class: "col-sm-2 col-form-label" %>
    <%= f.text_field :address, autofocus: true, placeholder: "東京都渋谷区代々木神園町0-0", class:"col-sm-5" %>
  </div>
  
  <div class="form-row">
    <%= f.label :"電話番号（ハイフンなし）", class: "col-sm-2 col-form-label" %>
    <%= f.text_field :tel, autofocus: true, placeholder: "00000000000", class:"col-sm-2" %>
  </div>
  
  <div class="form-row">
    <%= f.label :"パスワード（６文字以上）", class: "col-sm-2 col-form-label" %>
    <%= f.password_field :password, autocomplete: "new-password", class:"col-sm-2" %>
  </div>
  
  <div class="form-row">
    <%= f.label :"パスワード（確認用）", class: "col-sm-2 col-form-label" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"col-sm-2" %>
  </div>
  

  <div class="actions">
    <%= f.submit "新規登録", class:"btn btn-primary" %>
  </div>
<% end %>

<h3>既に登録済みの方</h3>
<%= link_to "こちら", new_customer_session_path %>
<a>からログインしてください。</a>

</div>
